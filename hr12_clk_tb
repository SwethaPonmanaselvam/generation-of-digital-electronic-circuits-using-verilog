module tb_hr_clk;
    reg clk;
    reg reset;
    wire [5:0] seconds;
    wire [5:0] minutes;
    wire [3:0] hours;

    hr_clk uut (
        .clk(clk),
        .reset(reset),
        .seconds(seconds),
        .minutes(minutes),
        .hours(hours)
    );

    initial begin
        clk = 0;
        forever #5 clk = ~clk;
    end

    initial begin
      $dumpfile("dump.vcd");
      $dumpvars;
        reset = 1;
        #10 reset = 0;
        #5000 $stop;
    end
endmodule
